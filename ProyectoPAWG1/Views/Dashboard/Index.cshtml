@using Newtonsoft.Json.Linq
@model IEnumerable<PAWG1.Models.EFModels.Component>

<div class="row">
@foreach (var c in Model)
{   
    JObject apiData = JObject.Parse(c.Data);
    @if (c.TypeComponent == "Widget")
    {
        
        <div class="col-md-@c.Size mb-4">
            <div class="card" style="background-color: @c.Color;">
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-8">
                            <div class="numbers">
                                <p class="text-sm mb-0 text-capitalize font-weight-bold text-white">@apiData["city"]["name"]</p>
                                    <h5 class="font-weight-bolder mb-0 text-white">
                                    @apiData["list"][0]["main"]["temp"]
                                        <span class="text-success text-white text-sm font-weight-bolder">@apiData["city"]["country"]</span>
                                </h5>
                            </div>
                        </div>
                        <div class="col-4 text-end">
                            <div class="icon icon-shape shadow bg-gradient-white text-center border-radius-md">
                                    <img src="data:image/png;base64,@Convert.ToBase64String(c.Simbol)" alt="Component Icon" class="img-fluid" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}

</div>
