@using Newtonsoft.Json.Linq
@model IEnumerable<PAWG1.Models.EFModels.Component>

<div class="row">
    @foreach (var component in Model)
    {   
        @if (component.Data != null && component.Data is string dataString)
        {
            JObject apiData = JObject.Parse(component.Data);
            @if (component.TypeComponent == "Weather")
            {
                <div class="col-md-@component.Size mb-4">
                    <div class="card" style="background-color: @component.Color;">
                        <div class="card-body p-3">
                            <div class="row">
                                <div class="col-6">
                                    <div class="numbers">
                                        <p class="text-sm mb-0 text-capitalize font-weight-bold text-dark">@apiData["city"]["name"]</p>
                                            <h5 class="font-weight-bolder mb-0 text-dark">
                                             @apiData["list"][0]["main"]["temp"]°
                                                <span class=" text-sm font-weight-bolder text-dark">@apiData["city"]["country"]</span>
                                            </h5>
                                    </div>
                                </div>
                                <div class="col-4 text-end d-flex justify-content-end">
                                    <div class="icon-shape shadow bg-gradient-white text-center border-radius-md">
                                            <img src="data:image/png;base64,@Convert.ToBase64String(component.Simbol)" alt="Component Icon" class="img-fluid"/>
                                    </div>
                                </div>
                                <div class="col-2 text-end d-flex justify-content-end">
                                    <form asp-action="SaveFavorite">
                                        <input type="hidden" name="id" value="@component.IdComponent"/>
                                        <button type="submit" class="btn">
                                            <i class="fa-regular fa-heart"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else if (component.TypeComponent == "Exchange Rate")
            {
                <div class="col-md-@component.Size mb-4">
                    <div class="card" style="background-color: @component.Color">
                        <div class="card-header pb-0" style="background-color: @component.Color">
                            <div class="row">
                                <div class="col-lg-6 col-7">
                                    <h6 class="text-dark">@component.TypeComponent</h6>
                                    <p class="text-sm mb-0 text-dark">
                                        <span class="font-weight-bold ms-1">Type:</span> @apiData["base_code"]
                                    </p>
                                </div>
                            </div>
                        </div>
                         <div class="card-body px-0 pb-2">
                            <div class="table-responsive">
                                <table class="table align-items-center mb-0">
                                    <thead>
                                        <tr>
                                            <th class="text-uppercase text-xxs font-weight-bolder text-dark">Country</th>
                                            <th class="text-uppercase text-xxs font-weight-bolder text-dark">Value</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (JProperty data in apiData["conversion_rates"])
                                        {
                                            <tr>
                                                <td class="text-dark">
                                                    @data.Name
                                                </td>
                                                <td class="text-dark">
                                                    @data.Value
                                                </td>
                                            </tr>    
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else if (component.TypeComponent == "News")
            {

                <div class="col-md-@component.Size mb-4">
                    <div class="card" style="background-color: @component.Color">
                        <div class="card-body p-3">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="d-flex flex-column h-100">
                                        <p class="mb-1 pt-2 text-bold">Author: @apiData["articles"][0]["author"]</p>
                                        <h5 class="font-weight-bolder text-dark">@apiData["articles"][0]["title"]</h5>
                                        <p class="mb-5 text-dark">@apiData["articles"][0]["description"]</p>
                                        <a class="text-body text-sm font-weight-bold mb-0 icon-move-right mt-auto" href="@apiData["articles"][0]["url"]">
                                            Read More
                                            <i class="fas fa-arrow-right text-sm ms-1" aria-hidden="true"></i>
                                        </a>
                                    </div>
                                </div>
                                <div class="col-lg-5 ms-auto text-center mt-5 mt-lg-0">
                                    <div class="position-relative d-flex align-items-center justify-content-center h-100">
                                        <img class="w-100 position-relative z-index-2 pt-4" src="data:image/png;base64,@Convert.ToBase64String(component.Simbol)" alt="rocket">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            
            }
        }

    }
</div>