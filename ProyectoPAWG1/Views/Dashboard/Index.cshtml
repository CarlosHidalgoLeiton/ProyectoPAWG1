@using Newtonsoft.Json.Linq
@model IEnumerable<PAWG1.Models.EFModels.Component>

<div class="row">
@foreach (var c in Model)
{   
    JObject apiData = JObject.Parse(c.Data);
    @if (c.TypeComponent == "Weather")
    {
        <div class="col-md-@c.Size mb-4">
            <div class="card" style="background-color: @c.Color;">
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-8">
                            <div class="numbers">
                                <p class="text-sm mb-0 text-capitalize font-weight-bold text-white">@apiData["city"]["name"]</p>
                                    <h5 class="font-weight-bolder mb-0 text-white">
                                     @apiData["list"][0]["main"]["temp"]°
                                        <span class="text-success text-white text-sm font-weight-bolder">@apiData["city"]["country"]</span>
                                    </h5>
                            </div>
                        </div>
                        <div class="col-4 text-end">
                            <div class="icon icon-shape shadow bg-gradient-white text-center border-radius-md">
                                    <img src="data:image/png;base64,@Convert.ToBase64String(c.Simbol)" alt="Component Icon" class="img-fluid" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else if (c.TypeComponent == "Exchange Rate"){
        <div class="col-md-@c.Size mb-4">
            <div class="row my-4">
                <div class="col-lg-8 col-md-6 mb-md-0 mb-4">
                    <div class="card">
                        <div class="card-header pb-0">
                            <div class="row">
                                <div class="col-lg-6 col-7">
                                    <h6>@c.TypeComponent</h6>
                                    <p class="text-sm mb-0">
                                        <i class="fa fa-check text-info" aria-hidden="true"></i>
                                        <span class="font-weight-bold ms-1">Type:</span> @apiData["base_code"]
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="card-body px-0 pb-2">
                            <div class="table-responsive">
                                <table class="table align-items-center mb-0">
                                    <thead>
                                        <tr>
                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Country</th>
                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Value</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (JProperty data in apiData["conversion_rates"])
                                        {
                                            <tr>
                                                <td>
                                                    @data.Name
                                                </td>
                                                <td>
                                                    @data.Value
                                                </td>
                                            </tr>    
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

}
</div>